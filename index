    <script>
        const codeDisplayElement = document.getElementById('codeDisplay');
        const codeLines = [
            "Initializing secure connection...",
            "Attempting to bypass firewall...",
            "Access granted to restricted network.",
            "Searching for vulnerabilities...",
            "Found backdoor in system kernel.",
            "Establishing root access...",
            "Privileges elevated.",
            "Injecting malicious payload...",
            "Data exfiltration in progress...",
            "Transferring sensitive information...",
            "Cleaning up traces...",
            "Log files deleted.",
            "Connection terminated.",
            "System compromised. Have a nice day.",
            "",
            "// You think this is real code, don't you?",
            "// It's just a simulation. For fun.",
            "// But it looks cool, right?",
            "// Mission complete."
        ];
        let lineIndex = 0;
        let charIndex = 0;
        let currentLine = '';
        const typingSpeed = 50; // Milisaniye cinsinden karakter yazma hızı

        function typeWriterEffect() {
            if (lineIndex < codeLines.length) {
                if (charIndex < codeLines[lineIndex].length) {
                    currentLine += codeLines[lineIndex].charAt(charIndex);
                    codeDisplayElement.textContent = currentLine;
                    charIndex++;
                    setTimeout(typeWriterEffect, typingSpeed);
                } else {
                    currentLine += '\n'; // Satır sonu ekle
                    codeDisplayElement.textContent = currentLine;
                    lineIndex++;
                    charIndex = 0;
                    setTimeout(typeWriterEffect, typingSpeed * 2); // Sonraki satıra geçmeden önce biraz bekle
                }
            } else {
                // Tüm satırlar yazıldıktan sonra isterseniz bir şey yapabilirsiniz
                // Örneğin, baştan başlatmak için:
                // setTimeout(() => {
                //     lineIndex = 0;
                //     charIndex = 0;
                //     currentLine = '';
                //     typeWriterEffect();
                // }, 5000);
            }
        }

        typeWriterEffect(); // Efekti başlat
    </script>
